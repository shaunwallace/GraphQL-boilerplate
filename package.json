{
  "name": "graphql-boilerplate",
  "version": "0.0.1",
  "description": "Client-side graphpQL boilerplate using apollo",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --inline --hot",
    "test": "jest",
    "lint": "eslint ./src/** -f table --color",
    "build": "webpack --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shaunwallace/GraphQL-boilerplate.git"
  },
  "keywords": [
    "graphQL",
    "boilerplate",
    "node",
    "apollo"
  ],
  "author": "Shaun Wallace",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shaunwallace/GraphQL-boilerplate/issues"
  },
  "homepage": "https://github.com/shaunwallace/GraphQL-boilerplate#readme",
  "devDependencies": {},
  "dependencies": {
    "apollo-client": "^0.7.2",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.1.8",
    "coveralls": "^2.12.0",
    "firebase": "^3.6.5",
    "graphql-tag": "^1.2.2",
    "html-webpack-plugin": "^2.26.0",
    "jest": "^18.1.0",
    "precommit-hook": "^3.0.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom" : ["src/**/*.{js,jsx}"],
    "coverageReporters": ["lcov"],
    "coverageDirectory": "reports/coverage",
    "notify": true
  }
}
